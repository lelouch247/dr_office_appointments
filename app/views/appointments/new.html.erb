<h1> Add a Patient </h1>

<%= form_for @appointment do |f| %>
  <h3>Doctors:<%= f.select :doctor_id, options_for_select(@doctor) %> <%= link_to 'New Doctor', new_doctor_path %> </h3>
  <h3>Patients:<%= f.select :patient_id, options_for_select(@patient) %> <%= link_to 'New Patient', new_patient_path %> </h3>
  <%= f.text_field :time, required: true, placeholder: 'Desired Time' %>
  <%= f.submit nil, class: 'btn' %>
<% end %>

<hr />
<%= link_to 'All Doctors', doctors_path %> |
<%= link_to 'All Patients', patients_path %>
